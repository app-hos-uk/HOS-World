// User Microservice Database Schema

generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/.prisma/user-client"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["user_service"]
}

model User {
  id                           String          @id @default(uuid())
  email                        String          @unique
  password                     String?
  firstName                    String?
  lastName                     String?
  phone                        String?
  role                         String          @default("CUSTOMER")
  avatar                       String?
  country                      String?
  whatsappNumber               String?
  preferredCommunicationMethod String?
  currencyPreference           String          @default("GBP")
  loyaltyPoints                Int             @default(0)
  themePreference              String?
  characterAvatarId            String?
  favoriteFandoms              String[]        @default([])
  gamificationPoints           Int             @default(0)
  level                        Int             @default(1)
  aiPreferences                Json?
  birthday                     DateTime?
  anniversary                  DateTime?
  customerGroupId              String?
  customerGroup                CustomerGroup?  @relation(fields: [customerGroupId], references: [id], onDelete: SetNull)
  createdAt                    DateTime        @default(now())
  updatedAt                    DateTime        @updatedAt
  addresses                    Address[]
  customerProfile              Customer?
  userBadges                   UserBadge[]
  userQuests                   UserQuest[]
  collections                  Collection[]

  @@map("users")
  @@schema("user_service")
}

model Customer {
  id                 String  @id @default(uuid())
  userId             String  @unique
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  country            String?
  currencyPreference String  @default("GBP")
  themePreference    String?

  @@map("customers")
  @@schema("user_service")
}

model Address {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label      String?
  firstName  String
  lastName   String
  street     String
  city       String
  state      String?
  postalCode String
  country    String
  phone      String?
  isDefault  Boolean  @default(false)
  latitude   Float?
  longitude  Float?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@map("addresses")
  @@schema("user_service")
}

model CustomerGroup {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  type        String   @default("MANUAL")
  isActive    Boolean  @default(true)
  customers   User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("customer_groups")
  @@schema("user_service")
}

model Badge {
  id          String      @id @default(uuid())
  name        String      @unique
  description String?
  icon        String?
  category    String?
  rarity      String?
  points      Int         @default(0)
  userBadges  UserBadge[]
  createdAt   DateTime    @default(now())

  @@map("badges")
  @@schema("user_service")
}

model UserBadge {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  earnedAt  DateTime @default(now())
  createdAt DateTime @default(now())

  @@unique([userId, badgeId])
  @@map("user_badges")
  @@schema("user_service")
}

model UserQuest {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questId   String
  status    String   @default("IN_PROGRESS")
  progress  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_quests")
  @@schema("user_service")
}

model Collection {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  items       Json     @default("[]")
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("collections")
  @@schema("user_service")
}
