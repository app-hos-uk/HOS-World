{
  "name": "@hos-marketplace/api",
  "version": "1.0.0",
  "description": "NestJS backend API for House of Spells Marketplace",
  "author": "House of Spells",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --testPathPattern=\\.spec\\.ts$",
    "test:integration": "jest --testPathPattern=integration\\.spec\\.ts$",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed-admin": "ts-node src/database/create-admin.ts",
    "db:seed-all-roles": "ts-node src/database/seed-all-roles.ts",
    "db:create-team-users": "ts-node src/database/create-team-users.ts",
    "db:verify-admin": "ts-node src/database/verify-admin.ts",
    "db:fix-admin": "ts-node src/database/fix-admin-now.ts",
    "db:migrate-phase6": "ts-node src/database/run-phase6-migration.ts",
    "db:run-migration-sql": "ts-node src/database/run-migration.ts",
    "verify:deployment": "ts-node scripts/verify-deployment.ts",
    "verify:oauth": "ts-node scripts/verify-oauth-table.ts",
    "verify:env": "ts-node scripts/verify-env-vars.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hos-marketplace/shared-types": "workspace:*",
    "@hos-marketplace/utils": "workspace:*",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/elasticsearch": "^10.0.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "express": "^4.18.2",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/throttler": "^5.0.1",
    "@prisma/client": "^5.22.0",
    "adm-zip": "^0.5.10",
    "bcrypt": "5.1.1",
    "cache-manager": "^5.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "stripe": "^14.9.0",
    "bullmq": "^5.3.0",
    "ioredis": "^5.3.2",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/lib-storage": "^3.490.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cache-manager": "^4.0.3",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
