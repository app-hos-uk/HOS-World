# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hos_db?schema=public

# JWT Authentication (REQUIRED - minimum 32 characters)
JWT_SECRET=change-this-to-a-strong-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-to-another-strong-random-string
JWT_EXPIRES_IN=15m

# Server
PORT=3001
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TTL=60

# File Uploads (local, s3, cloudinary, minio)
UPLOAD_PROVIDER=local
UPLOAD_DIR=./uploads

# S3/MinIO (if UPLOAD_PROVIDER=s3 or minio)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=eu-west-2
# AWS_S3_BUCKET=

# Cloudinary (if UPLOAD_PROVIDER=cloudinary)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Stripe Payment
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Email (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=noreply@hos.com

# Sentry (optional)
# SENTRY_DSN=

# Admin Migrations (development only)
ENABLE_ADMIN_MIGRATIONS=false
