# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hos_marketplace

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# OAuth (Federated Login)
# If GOOGLE/FACEBOOK/APPLE credentials are configured, the API will redirect back to:
#   ${FRONTEND_URL}/auth/callback?token=...&refreshToken=...&provider=...
# Ensure FRONTEND_URL matches the deployed web app base URL in production.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=
APPLE_CALLBACK_URL=http://localhost:3001/api/auth/apple/callback

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379

# Integration encryption (production)
# 64-character hex string (32 bytes). Used to encrypt stored API keys, webhook secrets, etc.
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
INTEGRATION_ENCRYPTION_KEY=

# Meilisearch (optional – enables full-text product search)
# If unset, search falls back to database queries.
# MEILISEARCH_HOST=http://localhost:7700  (local) or your Meilisearch Cloud / Railway URL
# MEILISEARCH_API_KEY=  (optional; required if Meilisearch has master key set)
MEILISEARCH_HOST=
MEILISEARCH_API_KEY=

# Sentry (production error tracking)
# Set SENTRY_DSN in Railway/production to enable error and performance tracking.
# Get your DSN from https://sentry.io → Project Settings → Client Keys (DSN).
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging (optional)
# LOG_FORMAT=json for JSON logs (e.g. for Datadog/ELK). Default: human in dev, JSON in production.
# LOG_LEVEL=DEBUG|INFO|WARN|ERROR
# LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# File Upload
UPLOAD_BASE_PATH=/data/uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
API_URL=https://hos-marketplaceapi-production.up.railway.app/api

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@hos-marketplace.com

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3 (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=hos-marketplace-uploads

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CDN
CDN_URL=https://cdn.hos-marketplace.com

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# Admin Migrations (Security)
# Set to "true" ONLY in development/staging. NEVER enable in production.
ENABLE_ADMIN_MIGRATIONS=false
