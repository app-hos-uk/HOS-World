{
  "name": "hos-marketplace",
  "version": "1.0.0",
  "description": "House of Spells Marketplace - Scalable e-commerce platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "fix:pnpm-state": "rm -f node_modules/.pnpm-workspace-state-v1.json && pnpm install",
    "verify:api": "node scripts/verify-api-endpoints.mjs"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.19",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}