{
  "name": "@hos-marketplace/database-common",
  "version": "1.0.0",
  "description": "Shared database utilities and base PrismaService for HOS Marketplace microservices",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "DATABASE_URL=postgresql://localhost:5432/dummy pnpm exec prisma generate && tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "prisma:generate": "pnpm exec prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "prisma": "^5.22.0"
  },
  "files": [
    "dist"
  ]
}